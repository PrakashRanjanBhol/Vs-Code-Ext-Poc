{
  "name": "vscode-code-assistant",
  "displayName": "vscode-code-assistant",
  "description": "Extension uses for VS Code Assistant.",
  "version": "1.2.0",
  "publisher": "prakash.ranjan",
  "icon": "out/media/chat-gpt-logo.jpeg",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-assistant-view",
          "title": "Code Assistant Tool",
          "icon": "./out/media/activity-bar-logo.svg"
        }
      ]
    },
    "views": {
      "code-assistant-view": [
        {
          "type": "webview",
          "id": "code-assistant-view-id",
          "name": "Chat Panel"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-code-assistant.start",
        "title": "Ask to Code Assistant Tool"
      },
      {
        "command": "vscode-code-assistant.start-image",
        "title": "Start Image"
      },
      {
        "command": "vscode-code-assistant.give-feedback",
        "title": "Share Feedbck"
      }
    ],
    "webviews": [
      {
        "viewType": "markdown.preview",
        "icon": {
          "light": "./out/media/chat-gpt-logo.jpeg",
          "dark": "./out/media/chat-gpt-logo.jpeg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@types/vscode-webview": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.16.17",
    "esbuild-copy-static-files": "^0.1.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "axios": "^1.7.2",
    "highlight.js": "^11.9.0",
    "rxjs": "^7.8.0",
    "undici": "^5.21.0"
  }
}
